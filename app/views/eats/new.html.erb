<%= javascript_tag do %>
  window.fridge_objects = <%= raw @fridges.to_json %>
<% end %>

<%= form_with model: [@eat, @form], url: eats_path, method: :post, local: true do |form| %>
    <%= form.text_field :title, placeholder: "タイトル" %>
    <%= form.file_field :image, placeholder: "写真を選ぶ" %>
    <%= form.text_field :comment, placeholder: "コメント" %>
    <%= form.date_field :date,  placeholder: "日付" %><br>
  <%= form.fields_for :fridges do |form| %>
    <div class="fridge-edit">
     <%= form.collection_select :id, @fridges, :id, :food, include_blank:"使用した食材を選択" , name: "food"%>
            在庫数
            <span id='now-amount'></span><span id='unit1'></span>
  
      <%= form.text_field :amount, placeholder: "使用する量" ,id: "amount"  %>
            残数
            <span id='remaining-amount'></span><span id='unit2'></span>
            値段
            <span id='using-price'></span>円
    </div>
  <% end %>
  <%= form.submit "投稿する" %>
<% end %>
